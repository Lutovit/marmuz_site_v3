@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()


    <ul class="nav navbar-nav navbar-right">

        <li class="nav-item pr-4">
            @Html.Partial("_AdminPartial")
        </li>

        <li class="pr-4">
            @Html.ActionLink(User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null,
           htmlAttributes: new { title = "Manage", @style = "color:white; font-size: 1em;" })
        </li>

        <li class="pr-4"><a href="javascript:document.getElementById('logoutForm').submit()" style="color:white;">Выйти</a></li>

    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">

        <li>@Html.ActionLink("Вход", "Login", "Account", routeValues: null, 
           htmlAttributes: new { id = "loginLink", @style="color:white;", @class="pr-4" })</li>
    </ul>
}
