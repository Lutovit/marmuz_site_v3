<!DOCTYPE html>
<html>

<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Разумный проект</title>
    <script src="https://use.fontawesome.com/0e9ea70684.js"></script>

    <style>

        body, html {
            -webkit-font-smoothing: antialiased;
            -webkit-overflow-scrolling: touch;
        }

        i:hover {
            color: #ff7878;
        }
        
    </style>


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


</head>


<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top mt-0">

        <a class="navbar-brand" href="/Home/Index">

            
            <div class="row px-2">
                <img src="~/Images/15.JPG" width="50" height="50" class="d-inline-block align-self-auto" alt="" loading="lazy">
                
            </div>
            
        </a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">

            <div class="nav-item pr-4">
                <div class="px-2" style="color: white ; font-size:1.7em;"><b><ins>ЧП "Разумный проект"</ins></b></div>
            </div>

            <ul class="navbar-nav ml-auto ">


                <li class="nav-item pr-4">
                    @Html.ActionLink("Домашняя страница", "Index", "Home", routeValues: null, htmlAttributes: new { @style = "color:white;" })
                </li>

                <li class="nav-item pr-4">
                    @Html.ActionLink("Наши проекты", "About", "Home", routeValues: null, htmlAttributes: new { @style = "color:white;" })
                </li>

                <li class="nav-item pr-4">
                    @Html.ActionLink("Отзывы о нас", "Index", "Comments", routeValues: null, htmlAttributes: new { @style = "color:white;" })
                </li>

                <li class="nav-item pr-4">
                    @Html.ActionLink("Наши заказчики", "Contact", "Home", routeValues: null, htmlAttributes: new { @style = "color:white;" })
                </li>

            </ul>

            @Html.Partial("_LoginPartial")

        </div>

    </nav>




    <div class="container-fluid body-content">

        <div class="container-fluid w-100">
            @RenderBody()
        </div>     

        <hr />

        <div class="container-fluid footer" id="footer">

            <div class="row justify-content-center  py-3 px-4">

                <div class="col-xs-12 col-md-12 col-lg-3">

                    <div id="socialnetworks">


                    </div>
                    
                </div>



                <div class="col-xs-12 col-md-12 col-lg-3">

                    <div id="phone">
                        <h4>Наши телефоны и почта:</h4>
                        <p>МТС:  +375 29 279 43 30</p>
                        <p>A1:   +375 44 450 11 01</p>
                        <p>E-mail: Razumproekt@gmail.com </p>
                    </div>

                </div>


                <div class="col-xs-12 col-md-12 col-lg-3">

                    <div id="adresse">
                        <h4>Наш адрес:</h4>
                        <p>Республика Беларусь, г. Минск , В. Хоружей, 29, оф. 310 (3 этаж)</p>
                    </div>

                </div>

            </div>

            <hr />

            <div class="row justify-content-center py-2" style="font-size:1.2em">

                <p> Designed by Lutovit </p>

            </div>

            <hr />

        </div>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
