@model marmuz_site_v1.Models.AdminEdit

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <h4 class="my-2">Редактирование роли пользователя.</h4>
        <hr />


        <div class="container-fluid">

            <div class="row">

                <div class="col-xs-10 col-lg-3 m-3 px-2">

                    <h5>@Html.DisplayNameFor(model => model.UserName) </h5>
                    @Html.DisplayFor(model => model.UserName)

                </div>

                <div class="col-xs-10 col-lg-3 m-3 px-2">

                    <h5>@Html.DisplayNameFor(model => model.CompanyName) </h5>
                    @Html.DisplayFor(model => model.CompanyName)

                </div>

                <div class="col-xs-10 col-lg-3  m-3 px-2">

                    <h5>@Html.DisplayNameFor(model => model.UserEmail)</h5>
                    @Html.DisplayFor(model => model.UserEmail)

                </div>

                <div class="col-xs-10 col-lg-2  m-3 px-2">

                    <h5>@Html.DisplayNameFor(model => model.UserRoleList)</h5>

                    <table class="table">

                        @foreach (string st in Model.UserRoleList)
                        {
                            <tr>
                                <td align="center">@st</td>

                                <td align="center">
                                    <a href="/Admin/DeleteRoleFromUser?Email=@Model.UserEmail&Rolename=@st">
                                        <i class="fa fa-minus-square" aria-hidden="true"></i>
                                    </a>
                                <td>
                            </tr>
                        }

                    </table>

                </div>

                <div class="col-xs-10 col-lg-2  m-3 px-2">

                    <h5>@Html.DisplayNameFor(model => model.RoleList)</h5>

                    <table class="table">

                        @foreach (string st in Model.RoleList)
                        {
                            <tr>
                                <td align="center">@st</td>

                                <td align="center">
                                    <a href="/Admin/AddRoleToUser?Email=@Model.UserEmail&Rolename=@st">
                                        <i class="fa fa-plus-square" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                    </table>

                </div>

            </div>

        </div>

    </div>

    <div>
        <a href="/Admin/Index" class="btn btn-dark">Вернуться в панель администратора.</a>
    </div>

}




