@model IEnumerable<marmuz_site_v1.Models.BanEmails>
@using marmuz_site_v1.Controllers

<div class="container-fluid">

    <div class="row py-3">

        <div class="col-xs-12 col-md-8 col-lg-4">

            <div class="row">
                <h5 class="mr-3">№</h5>
                <h5>@Html.DisplayName("Имя:")</h5>
            </div>

        </div>


        <div class="col-xs-12 col-md-8 col-lg-4">

            <h5>@Html.DisplayName("Email:")</h5>

        </div>

    </div>



    @{
        int i = 1;

        foreach (var item in Model)
        {
            <div class="row border-top border-dark">


                <div class="col-xs-12 col-md-8 col-lg-4">
                    <h5 class="mr-3">@i</h5>
                     @Html.DisplayFor(modelItem => item.Email)
                  </div>

                <div class="ccol-xs-12 col-md-8 col-lg-4">

                    <div class="row py-2">
                        @Html.ActionLink("Отменить Ban", "CancelBan", "Admin", new {email = item.Email }, htmlAttributes: new { @class = "btn btn-dark" })
                    </div>

                </div>

            </div>

            i++;
        }
    }



</div>




