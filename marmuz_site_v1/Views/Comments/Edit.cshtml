@model marmuz_site_v1.Models.CommentEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Здесь можно изменить ваш отзыв, при желании.</h2>

@using (Html.BeginForm())
{
        @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ApplicationUserId)



        <div class="container-fluid py-3">
            <div class="row justify-content-center">

                <div class="col-xs=12 col-md-2 col-lg-2">
                    <p>Ваше имя:  @Html.DisplayFor(model => model.ClientName)</p>
                </div>

                <div class="col-xs=12 col-md-2 col-lg-2">

                </div>

                <div class="col-xs=12 col-md-2 col-lg-2">
                    <p>Отзыв создан:  @Html.DisplayFor(model => model.DateOfCreate)</p>
                    <p>Последнее изменение:  @Html.DisplayFor(model => model.DateOflastEdit)</p>
                </div>

            </div>
        </div>


        <div class="container-fluid py-3">


            <div class="row justify-content-center py-2">
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <p>Ваш отзыв:</p>
                    @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", @style = "max-width: 10000px; width: device-width; height: 200px;" } })
                    @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row  justify-content-center py-2">
                <div class="col-xs-6 col-md-1 col-lg-1  py-3">
                    @Html.ActionLink("Назад", "Index", routeValues: null, htmlAttributes: new { @style = "font-size: 1em", @class = "btn btn-dark" })
                </div>

                <div class="col-xs-6 col-md-1 col-lg-1  py-3">
                    <input type="submit" value="Сохранить изменения" class="btn btn-dark" style="font-size: 1em" />
                </div>
            </div>

        </div>





    </div>
}


